<h1><%= t '.search_for_runners' %></h1>
<div class="row">
  <div class="col-lg-9">
    <table class="table table-hover" id="runners-datatable" data-source="<%= runners_path(format: :json) %>">
      <thead>
      <tr>
        <th class="all"><%= t('first_name') %> </th>
        <th class="all"><%= t('last_name') %> </th>
        <th><%= t('club_or_hometown') %> </th>
        <th class="desktop"><%= t('sex') %> </th>
        <th class="desktop"><%= t('nationality') %> </th>
        <th><%= t('participations') %> </th>
        <th><%= t('best_time') %> </th>
        <th class="all col-sm-2"></th>
      </tr>
      </thead>

      <tbody>
      </tbody>
    </table>
  </div>
  <div class="col-lg-3">
    <%= panel heading: t('.remembered_renners'), context: :info, id: 'remembered-runners-panel' do %>
        <div class='panel-body'>
          <%= link_to t('.show_remembered_runners'), url_for(action: 'show_remembered', ids: []),
                      id: 'remembered-runners-link', class: 'btn btn-primary btn-block' %>
          <%= link_to t('.forget_remembered_runners'), '#', data: {forget_runners: true},
                      class: 'btn btn-danger btn-block' %>
          <%= link_to t('.merge_remembered_runners'), new_merge_runners_request_path,
                      class: 'btn btn-default btn-xs btn-block' %>
        </div>
    <% end %>
  </div>
</div>